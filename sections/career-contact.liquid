<style>
  .contact-width {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    text-align: center;
    margin: 0 auto;
    padding-block: 160px;
  }

  .contact-heading {
    width: 100%;
    max-width: 56%;
  }
  .contact-heading p {
    color: rgba(93, 34, 108, 1);
    font-weight: normal;
    font-family: 'TT Norms';
    font-style: normal;
    font-size: 50px;
    line-height: normal;
    padding: 10px 0px;
  }
  .contact-txt p {
    color: rgba(0, 0, 0, 1);
    font-family: Assistant, sans-serif;
    font-weight: normal;
    font-size: 24px;
  }
  .contact-txt {
    margin-right: auto;
    margin-left: auto;
    max-width: 65%;
    margin: 20px 0 30px 0;
  }
  .contact-btn button {
    border-style: solid;
    padding-top: 10px;
    padding-left: 30px;
    padding-bottom: 10px;
    padding-right: 30px;
    border-top-width: 1px;
    border-left-width: 1px;
    border-bottom-width: 1px;
    border-right-width: 1px;
    border-color: rgba(93, 34, 108, 1);
    border-radius: 30px;
    background-color: rgba(255, 255, 255, 0);
    text-align: center;
    text-decoration: none;
    background-image: none;
    font-size: 18px;
    cursor: pointer;
    color: rgba(93, 34, 108, 1);
  }

  .contact-btn button:hover {
    background: rgba(93, 34, 108, 1);
    color: white;
  }
  @media screen and (max-width: 1000px) {
    .contact-heading p {
      font-size: 38px;
    }
    .contact-txt {
      max-width: 100%;
    }
  }
  @media screen and (max-width: 768px) {
    .contact-heading p {
      font-size: 38px;
    }
    .contact-heading {
      max-width: 100%;
    }
    .contact-txt {
      max-width: 100%;
    }
    .contact-width {
      padding-block: 50px;
    }
  }
  @media screen and (max-width: 425px) {
    .contact-heading p {
      font-size: 33px;
    }
    .contact-txt p {
      line-height: normal;
    }
  }
</style>

<div class="container contact-width">
  <div class="contact-heading">
    <p>{{ section.settings.some_text }}</p>
  </div>
  <div class="contact-txt">
    <p>{{ section.settings.sometext }}</p>
  </div>
  <div class="contact-btn">
    <button>
      {{ section.settings.btntext }}
    </button>
  </div>
</div>

{% schema %}
{
  "name": "Contact Section",
  "settings": [
    {
      "type": "text",
      "id": "some_text",
      "label": "Please enter some text"
    },

    {
      "type": "text",
      "id": "sometext",
      "label": "Please enter some text"
    },

    {
      "type": "text",
      "id": "btntext",
      "label": "Please enter some text"
    }
  ],
  "presets": [
    {
      "name": "Contact Section",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}
