<style>
  img.background-img {
    width: 100%;
    height: 100%;
    min-height: 500px;
    object-fit: cover;
  }

  .background-image {
    display: flex;
  }

  .box-content p {
    font-weight: 400;
    line-height: 28px;
    text-align: left;
    color: #ede9ed;
    margin: 20px 0px 21px;
  }

  .last-min-container {
    position: relative;
  }

  .text-box {
    height: auto;
    max-width: 600px;
    background-color: #5d226c;
    color: #fff;
    padding: 70px 50px;
  }

  .flex-box {
    position: absolute;
    top: 0;
    display: flex;
    align-items: center;
    height: 100%;
    bottom: 0;
    right: 0;
    left: 0;
  }
</style>
<div class="last-main-container">
  <div class="last-min-container">
    <div class="background-image">
      <img
        srcset="
          {%- if section.settings.background_image.width >= 375 -%}{{ section.settings.background_image | image_url: width: '375x' }} 375w,{%- endif -%}
          {%- if section.settings.background_image.width >= 750 -%}{{ section.settings.background_image | image_url: width: '750x' }} 750w,{%- endif -%}
          {%- if section.settings.background_image.width >= 1296 -%}{{ section.settings.background_image | image_url: width: '1296x' }} 1296w,{%- endif -%}
          {%- if section.settings.background_image.width >= 1500 -%}{{ section.settings.background_image | image_url: width: '1500x' }} 1500w,{%- endif -%}
          {%- if section.settings.background_image.width >= 1780 -%}{{ section.settings.background_image | image_url: width: '1780x' }} 1780w,{%- endif -%}
          {%- if section.settings.background_image.width >= 2000 -%}{{ section.settings.background_image | image_url: width: '2000x' }} 2000w,{%- endif -%}
          {%- if section.settings.background_image.width >= 2800 -%}{{ section.settings.background_image | image_url: width: '2800x' }} 2800w{%- endif -%}
        "
        src="{{ section.settings.background_image | image_url: width: '1296x' }}"
        class="background-img"
        loading="lazy"
        alt="{{ section.settings.background_image.alt | escape }}"
        width="{{ section.settings.background_image.width }}"
        height="{{ section.settings.background_image.width | divided_by: section.settings.background_image.aspect_ratio }}"
        style="object-position: {{ section.settings.background_image.presentation.focal_point }}"
      >
    </div>
    <div class="flex-box container">
      <div class="text-box">
        <div class="text-box-image">
          <img
            srcset="
              {%- if section.settings.text_box_image.width >= 375 -%}{{ section.settings.text_box_image | image_url: width: '375x' }} 375w,{%- endif -%}
              {%- if section.settings.text_box_image.width >= 750 -%}{{ section.settings.text_box_image | image_url: width: '750x' }} 750w,{%- endif -%}
              {%- if section.settings.text_box_image.width >= 1296 -%}{{ section.settings.text_box_image | image_url: width: '1296x' }} 1296w,{%- endif -%}
              {%- if section.settings.text_box_image.width >= 1500 -%}{{ section.settings.text_box_image | image_url: width: '1500x' }} 1500w,{%- endif -%}
              {%- if section.settings.text_box_image.width >= 1780 -%}{{ section.settings.text_box_image | image_url: width: '1780x' }} 1780w,{%- endif -%}
              {%- if section.settings.text_box_image.width >= 2000 -%}{{ section.settings.text_box_image | image_url: width: '2000x' }} 2000w,{%- endif -%}
              {%- if section.settings.text_box_image.width >= 2800 -%}{{ section.settings.text_box_image | image_url: width: '2800x' }} 2800w{%- endif -%}
            "
            src="{{ section.settings.text_box_image | image_url: width: '450x' }}"
            loading="lazy"
            alt="{{ section.settings.text_box_image.alt | escape }}"
            width="{{ section.settings.text_box_image.width }}"
            height="{{ section.settings.text_box_image.width | divided_by: section.settings.text_box_image.aspect_ratio }}"
            style="object-position: {{ section.settings.text_box_image.presentation.focal_point }}"
          >
        </div>
        <div class="box-content">{{ section.settings.box_content }}</div>
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "About Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "image_picker",
      "id": "text_box_image",
      "label": "Logo"
    },
    {
      "type": "richtext",
      "id": "box_content",
      "label": "Content"
    }
  ],
  "presets": [
    {
      "name": "About Banner"
    }
  ]
}
{% endschema %}
