<style>
  .our-partner-context {
    max-width: 990px;
    margin: auto;
  }
  .margin-flex {
    display: flex;
    width: 100%;
    margin: auto;
    justify-content: space-between;
  }

  .margin-text {
    width: 50%;
    max-width: 585px;
  }

  .margin-text h2 {
    font-size: 50px;
    margin-top: 150px;
  }

  .margin-text p {
    font-size: 24px;
  }

  .margin-section {
    background-color: rgba(246, 245, 245, 1);
    margin: 100px 0;
  }

  .margin-image {
    margin-top: -60px;
    display: flex;
    width: 50%;
    max-width: 585px;
  }

  .margin-image img {
    width: 100%;
    max-width: 100%;
    padding-left: 65px;
  }
  .margin-flex1 {
    display: flex;
    flex-direction: row-reverse;
    justify-content: space-between;
    width: 100%;
    margin: auto;
    margin-top: 80px;
  }

  .margin-text1 {
    width: 50%;
    max-width: 585px;
  }

  .margin-image1 {
    margin-bottom: -60px;
    display: flex;
    width: 50%;
    max-width: 585px;
  }

  .margin-text1 h2 {
    font-size: 50px;
    margin-top: 100px;
  }

  .margin-text1 p {
    font-size: 24px;
  }
  .margin-image1 img {
    width: 100%;
    max-width: 100%;
    object-fit: cover;
    padding-right: 50px;
  }
  @media only screen and (max-width: 980px) {
    .margin-text1 h2 {
      font-size: 38px;
    }
    .margin-image {
      margin: auto;
    }

    .margin-flex {
      gap: 30px;
    }

    .margin-image img {
      padding-left: 0px;
    }

    .margin-image1 {
      margin: auto;
    }

    .margin-image1 img {
      padding-right: 0px;
    }

    .margin-flex1 {
      gap: 30px;
    }
  }

  @media only screen and (max-width: 768px) {
    .margin-text1 h2 {
      font-size: 35px;
    }
    .margin-flex {
      display: flex;
      flex-direction: column;
      margin: auto;
    }

    .margin-flex1 {
      display: flex;
      flex-direction: column;
      margin: auto;
    }

    .margin-flex {
      width: 100%;
      max-width: 100%;
    }

    .margin-text {
      width: 100%;
      max-width: 100%;
      justify-content: center;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .margin-text1 {
      width: 100%;
      max-width: 100%;
      justify-content: center;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .margin-image {
      width: 100%;
    }

    .margin-image1 {
      width: 100%;
    }

    .margin-image img {
      width: 100%;
      max-width: 100%;
    }

    .margin-image1 {
      width: 100% !important;
      max-width: 100% !important;
    }

    .margin-image1 img {
      max-width: 100%;
      width: 100%;
    }

    .margin-image img {
      max-width: 100%;
      width: 100%;
    }

    .margin-image {
      width: 100% !important;
      max-width: 100% !important;
    }
    .margin-text h2 {
      margin-top: 50px;
    }
  }
</style>

<div class="margin-section">
  <div class="container">
    <div class="margin-flex">
      <div class="margin-text">
        <h2>
          {{ section.settings.heading }}
        </h2>
        <P>
          {{ section.settings.paragraph }}
        </P>
      </div>
      <div class="margin-image">
        {% if section.settings.image != blank %}
          <img src="{{ section.settings.image  | img_url: "master"}}">
        {% endif %}
      </div>
    </div>
    <div class="margin-flex1">
      <div class="margin-text1">
        <h2>
          {{ section.settings.heading1 }}
        </h2>
        <P>
          {{ section.settings.paragraph1 }}
        </P>
      </div>
      <div class="margin-image1">
        {% if section.settings.image != blank %}
          <img src="{{ section.settings.image1  | img_url: "master"}}">
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Margin Image",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "First Heading",
      "default": "Our Culture"
    },
    {
      "type": "text",
      "id": "paragraph",
      "label": "First Paragraph"
    },
    {
      "type": "image_picker",
      "label": "First Image",
      "id": "image"
    },
    {
      "type": "text",
      "id": "heading1",
      "label": "Second Heading",
      "default": "Constantly Evolving"
    },
    {
      "type": "text",
      "id": "paragraph1",
      "label": "Second Paragraph"
    },
    {
      "type": "image_picker",
      "label": "Second Image",
      "id": "image1"
    }
  ],

  "presets": [
    {
      "name": "Margin Image",
      "category": "Partner"
    }
  ]
}
{% endschema %}
