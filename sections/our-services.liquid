<style>
  .service-title h3 {
    font-size: 25px;
    line-height: 35px;
    margin-top: 70px;
    margin-bottom: 0;
    letter-spacing: 0.03em;
    color: #5d226c;
  }

  .service-description p {
    margin-top: 30px;
    margin-bottom: 50px;
    line-height: 1.5;
  }

  .service-image svg {
    width: 59px;
    height: 49px;
  }

  .services-sub-container {
    max-width: 500px;
    min-height: 410px;
    border-bottom: 1px solid #926095;
    margin: auto;
    margin-top: 50px;
  }

  .services-min-container {
    display: flex;
    align-items: flex-start;
    padding-top: 120px;
    padding-bottom: 170px;
    flex-wrap: wrap;
    justify-content: space-between;
  }

  .services-main-container {
    width: 100%;
    background: linear-gradient(0deg, #f4eaf4 0, rgba(217, 217, 217, 0) 100%);
  }
</style>
<div class="services-main-container">
  <div class="services-min-container container">
    {% for block in section.blocks %}
      <div class="services-sub-container">
        <div class="service-image">{{ block.settings.service_image }}</div>
        <div class="service-title">
          <h3>{{ block.settings.service_title }}</h3>
        </div>
        <div class="service-description">{{ block.settings.service_description }}</div>
      </div>
    {% endfor %}
  </div>
</div>
{% schema %}
{
  "name": "About Our Services",
  "settings": [],
  "blocks": [
    {
      "name": "Content",
      "type": "content",
      "settings": [
        {
          "type": "html",
          "id": "service_image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "service_title",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "service_description",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "About Our Services"
    }
  ]
}
{% endschema %}
